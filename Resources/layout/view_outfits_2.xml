<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="View Outfits"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:gravity="center" />
    <TextView
        android:text="Outfit Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayout1">
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView1" />
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView2" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayout2">
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView3" />
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView4" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayout3">
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView5" />
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView6" />
    </LinearLayout>
    <TextView
        android:text="Occasion"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:gravity="center" />
    <TextView
        android:text="Velit qui tempora sit sit eos cum quibusdam. Modi perspiciatis non est. Dolores placeat eos delectus in veniam."
        android:layout_width="370.0dp"
        android:layout_height="58.5dp"
        android:id="@+id/textView4"
        android:layout_marginBottom="0.0dp"
        android:layout_gravity="center" />
    <Button
        android:text="Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_margin="30px" />

</LinearLayout>
